<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:context="http://www.springframework.org/schema/context"
	xsi:schemaLocation="http://www.springframework.org/schema/beans
    http://www.springframework.org/schema/beans/spring-beans-3.0.xsd
    http://www.springframework.org/schema/context
    http://www.springframework.org/schema/context/spring-context-3.0.xsd">

	<bean id="addComputerServlet" class="webapp.computer.AddComputerServlet">
		<property name="computerService">
			<ref bean="computerService" />
		</property>
	</bean>
	<bean id="loadServlet" class="webapp.computer.LoadServlet" >
		<property name="companyService">
			<ref bean="companyService" />
		</property>
	</bean>
	<bean id="updateComputerServlet" class="webapp.computer.UpdateComputerServlet">
		<property name="computerService">
			<ref bean="computerService" />
		</property>
	</bean>
	<bean id="showAllComputersServlet" class="webapp.computer.ShowAllComputersServlet">
		<property name="computerService">
			<ref bean="computerService" />
		</property>
	</bean>
	<bean id="deleteComputerServlet" class="webapp.computer.DeleteComputerServlet">
		<property name="computerService">
			<ref bean="computerService" />
		</property>
	</bean>

	<bean id="computerService" class="service.impl.ComputerService" />
	<bean id="companyService" class="service.impl.CompanyService" />

</beans>